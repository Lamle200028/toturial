<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="6dp" />
            <gradient
                android:endColor="#FFFA71CD"
                android:startColor="#FFC471F5" />
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="@color/tt_transparent"/>
        </shape>
    </item>
</layer-list>