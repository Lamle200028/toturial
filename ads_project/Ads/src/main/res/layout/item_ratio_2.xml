<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ctnBackground"
        android:layout_width="56dp"
        android:layout_height="32dp"
        android:layout_marginEnd="8dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="#1A1A22"
            android:layout_margin="1dp"
            app:cardCornerRadius="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:elevation="1dp"
                android:layout_marginHorizontal="5dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imgRatio"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_canvas_1_1"/>

                <TextView
                    android:id="@+id/tvRatio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/tt_white"
                    android:fontFamily="@font/dmsans_medium"
                    android:text="1:1"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <View
            android:id="@+id/bgGradient"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="1dp"
            android:visibility="gone"
            tools:visibility="visible"
            android:background="@drawable/bg_container_stroke_style_main_radius_6"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
